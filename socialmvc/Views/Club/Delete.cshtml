@using socialmvc.ViewModel
@using socialmvc.Data.Enum

@model Club
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}




<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Create Club</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <router-link href="">Edit Club</router-link>
                    </li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="alert alert-danger text-center mb-2" role="alert">
                            Are you sure you want to delete this club?

                        </div>
                        <form method="post" asp-action="Delete" enctype="multipart/form-data">
                            <input type="hidden" value="AddressId" id="AddressId" />
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="form-group">
                                        <input asp-for="Title" class="form-control" placeholder="Title">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="form-group">
                                        <select class="form-control" asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()">
                                            <option>-- Select --</option>
                                        </select>
                                        <span asp-validation-for="ClubCategory" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="form-group">
                                        <input asp-for="Address.Street" class="form-control" placeholder="Street">
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="form-group">
                                        <input asp-for="Address.City" class="form-control" placeholder="City">
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="form-group">
                                        <input asp-for="Address.State" class="form-control" placeholder="State">
                                        <span asp-validation-for="Address.State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="form-group">
                                        <input asp-for="Address.Country" class="form-control" placeholder="Country">
                                        <span asp-validation-for="Address.Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-2">
                                    <div class="form-group">
                                        <label asp-for="Description">Description</label>
                                        <textarea class="form-control" asp-for="Description" rows="3"
                                                  placeholder="Enter Description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12 mb-2">
                                    <div class="form-group">
                                        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary hide">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<div class="form-group mt-3">
    <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger" />
    </form>
</div>